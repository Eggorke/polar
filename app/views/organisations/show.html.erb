<h2>Организация</h2>

<div class='container w-100'>
  <div class="row mt-3">
    <div class="col">Название</div>
    <div class="col">Руководитель</div>
    <div class="col">Телефон</div>
    <div class="col">Примечание</div>
  </div>

  <div class="row mt-3">
    <div class="col"><%= @organisation.name %></div>
    <div class="col"><%= @organisation.director %></div>
    <div class="col"><%= @organisation.phone %></div>
    <div class="col"><%= @organisation.note %></div>
  </div>

  <div class=" mt-3">
    <div class="mt-2"><%= link_to 'Редактировать', edit_organisation_path, class: "btn btn-secondary" %></div>
    <div class="mt-2"><%= link_to 'Удалить', @organisation, method: :delete, class: 'btn btn-danger' %></div>
  </div>


</div>