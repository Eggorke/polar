<h2>Заявка № <%= @order.id %></h2>
<div>Организация <%= @order.user.organisation.name %></div>

<div class="container w-100">

  <div class="row mt-3 mb-3">
    <div class="col-3">Место</div>
    <div class="col-3">Объект</div>
    <div class="col-4">Проблема</div>
    <div class="col-2">Срок</div>
  </div>


  <% @order.order_items.each do |oit| %>
    <div class="row">
      <div class="col-3"><%= oit.place %></div>
      <div class="col-3"><%= oit.issue_object %></div>
      <div class="col-4"><%= oit.issue %></div>
      <div class="col-2"><%= oit.need_to %></div>
    </div>
  <% end %>

  <div class="col-12"><%= @order.note %></div>

  <div class="mt-3"><%= link_to "Редактировать заявку", edit_order_path , class: 'btn btn-secondary' %></div>
  <div class="mt-3"><%= link_to "Удалить заявку", @order ,method: :delete, data: {confirm: "Вы уверены?"}, class: 'btn btn-danger' %></div>

</div>
